@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesion";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger">Click aca para cerrar secion</button>
            </form>
        }
        else
        {
            <p>Has cerrado sesion en la aplicacion</p>
        }
    }
</header>
