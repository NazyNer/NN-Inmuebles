@model NN_Inmuebles.Models.Alquiler

@{
    ViewData["Title"] = "Alquileres";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>

<h1 class="text-center">Alquiler</h1>
<hr />
<div class="row RowCenter">
    <div class="col-md-4 RowCreate p-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaAlquiler" class="control-label"></label>
                <input asp-for="FechaAlquiler" class="form-control" />
                <span asp-validation-for="FechaAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-for="ClienteID" class ="form-control" asp-items="ViewBag.ClienteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CasaID" class="control-label"></label>
                <select asp-for="CasaID" class ="form-control" asp-items="ViewBag.CasaID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary mt-2" />
                <a class="btn btn-danger mt-2 ms-2" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>
