@model IEnumerable<NN_Inmuebles.Models.Casa>

@{
    ViewData["Title"] = "Casas";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domicilio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDueño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenCasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alquilada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eliminada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDueño)
            </td>
            <td>  
                @{
                    var base64 = Convert.ToBase64String(item.ImagenCasa);
                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                }
                <img class="Img" src="@imgSrc" />
            </td>
            <td>
                @(item.Alquilada?"Alquilada😔":"Disponible😁")
            </td>
            <td>
                @(item.Eliminada?"Elminada❌":"🏡🏘🏚🏰🏯")
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CasaID">Editar</a> |
                <a class="btn btn-danger" onclick="eliminarCasa(@item.CasaID)">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
